    </li>
</div>
<div class="row pb-4">
       <h3>Entrees</h3>
    @foreach (var item in @Model)
    {
        @if(item.CategoryId==1){
            @if (this.User.Identity.IsAuthenticated)
            {
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap"></img>
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">Price: @item.Price.ToString("0.00")</p>
                        <a asp-action="Details" asp-controller="Home" asp-route-productId="@item.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            }
            else
            {
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap"></img>
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <!--<p class="card-text">Price: @item.Price.ToString("0.00")</p>-->
                        <!--<a asp-action="Details" asp-controller="Home" asp-route-productId="@item.Id" class="btn btn-primary">Details</a>-->
                        <p class="card-text">@item.Description</p>
                    </div>
                </div>
            }
        }
        
    }
</div>
