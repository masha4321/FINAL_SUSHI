@model IEnumerable<SushiEShop.Models.Product>

@if (this.User.Identity.IsAuthenticated)
{
    <h1>Order</h1>
}
else{
    <h3>Login or Register to Place Order</h3>
}
<div class="text-center">
    <li class="nav-item m-2">
        <a class="nav-link" asp-area="Guest" asp-action="Entrees" asp-controller="Home">Entrees</a>
    </li>
    <li class="nav-item m-2">
        <a class="nav-link" asp-area="Guest" asp-action="Mains" asp-controller="Home">Mains</a>
    </li>
